<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.civfanatics.civ3.xplatformeditor.download.RenameUnitWindowController">
   <children>
      <Label text="Download Progress">
         <VBox.margin>
            <Insets left="10.0" top="10.0" />
         </VBox.margin></Label>
      <BorderPane>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
         <center>
            <ProgressBar fx:id="prgDownload" prefWidth="480.0" progress="0.0" BorderPane.alignment="CENTER" />
         </center>
         <padding>
            <Insets top="10.0" />
         </padding>
      </BorderPane>
      <Label fx:id="lblDownloadStatus" text="The unit is being downloaded.  Enter the name for your unit below, and it will be added to your scenario folder." wrapText="true">
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin></Label>
      <VBox prefWidth="100.0">
         <children>
            <BorderPane>
               <center>
                  <TextField fx:id="txtName" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="5.0" />
                     </BorderPane.margin></TextField>
               </center>
               <left>
                  <Label text="New name:" BorderPane.alignment="CENTER" />
               </left>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </BorderPane>
         </children>
      </VBox>
      <BorderPane>
         <bottom>
            <Button fx:id="cmdAddToScenario" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#addToScenario" text="Add to Scenario" textAlignment="CENTER" BorderPane.alignment="BOTTOM_RIGHT">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
         <VBox.margin>
            <Insets bottom="10.0" right="10.0" />
         </VBox.margin>
      </BorderPane>
   </children>
</VBox>
